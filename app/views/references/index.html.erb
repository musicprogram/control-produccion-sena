<p id="notice"><%= notice %></p>

<h1>Listing References</h1>

<table>
  <thead>
    <tr>
      <th>Referencia</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @references.each do |reference| %>
      <tr>
        <td><center><%= link_to reference.ref, reference_fichatecnicas_path(reference) %></center></td>
        <td><%= reference.nombre %></td>
        <td><%= reference.descripcion %></td>
        <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
        <td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%# link_to 'ficha', reference_fichatecnicas_path(reference) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

