<p id="notice"><%= notice %></p>

<h1>Listing Ayudas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Url</th>
      <th>Url_Opcional</th>
      <th>Descripcion</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ayudas.each do |ayuda| %>
      <tr>
        <td><%= ayuda.nombre %></td>
        <td><%= ayuda.url %></td>
        <td><%= ayuda.opcional %></td>
        <td><%= ayuda.descripcion %></td>
        <td><%= image_tag ayuda.imagen.url(:thumb) %></td>
        <td><%= link_to 'Show', ayuda %></td>
        <td><%= link_to 'Edit', edit_ayuda_path(ayuda) %></td>
        <td><%= link_to 'Destroy', ayuda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

