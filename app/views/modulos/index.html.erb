<p id="notice"><%= notice %></p>

<h1>Listing Modulos</h1>

<table>
  <thead>
    <tr>
      <th>Tipo de Vestuario</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modulos.each do |modulo| %>
      <tr>
        <td><%= modulo.tipovestuario.nombre rescue nil%></td>
        <td><%= modulo.nombre %></td>
        <td><%= modulo.descripcion %></td>
        <td><%= link_to 'Show', modulo %></td>
        <td><%= link_to 'Edit', edit_modulo_path(modulo) %></td>
        <td><%= link_to 'Destroy', modulo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

