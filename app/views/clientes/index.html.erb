<p id="notice"><%= notice %></p>

<h1>Listing Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Tipo Documento</th>
      <th>Documento</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.documento.nombre rescue nil %></td>
        <td><%= cliente.numero_documento rescue nil %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.correo rescue nil %></td>
        <td><%= cliente.telefono rescue nil %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

