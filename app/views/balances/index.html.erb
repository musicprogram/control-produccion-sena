<p id="notice"><%= notice %></p>

<h1>Listing Balances</h1>

<table>
  <thead>
    <tr>
      <th>Reference</th>
      <th>Pedido prendas</th>
      <th>Jornada laboral</th>
      <th>Talk time</th>
      <th>Tiempo total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.reference.id rescue nil %></td>
        <td><%= balance.pedido_prendas %></td>
        <td><%= balance.jornada_laboral %></td>
        <td><%= balance.talk_time %></td>
        <td><%= balance.tiempo_total %></td>
        <td><%= link_to 'Show', balance %></td>
        <td><%= link_to 'Edit', edit_balance_path(balance) %></td>
        <td><%= link_to 'Destroy', balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

