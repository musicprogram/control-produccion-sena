<p id="notice"><%= notice %></p>

<h1>Listing Telas</h1>

<table>
  <thead>
    <tr>
      <th>Referencia</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Observaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @telas.each do |tela| %>
      <tr>
        <td><%= tela.ref %></td>
        <td><%= tela.nombre %></td>
        <td><%= tela.descripcion %></td>
        <td><%= tela.observaciones %></td>
       
        <td><%= link_to 'Show', tela %></td>
        <td><%= link_to 'Edit', edit_tela_path(tela) %></td>
        <td><%= link_to 'Destroy', tela, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

