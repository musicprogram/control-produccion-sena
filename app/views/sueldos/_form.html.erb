<%= simple_form_for(@sueldo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :salario , :input_html => {value: number_with_precision(f.object.salario, precision: 3) }%>
    <%= f.input :salario_porcentaje , :input_html => {value: number_with_precision(f.object.salario_porcentaje, precision: 2) } %>
    <%= f.input :subsidio , :input_html => {value: number_with_precision(f.object.subsidio, precision: 3) } %>
    <%= f.input :subsidio_procentaje , :input_html => {value: number_with_precision(f.object.subsidio_procentaje, precision: 2) } %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
